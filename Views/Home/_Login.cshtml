@model LoginUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h3 class="text-center">Login</h3>
    <hr>

    <form asp-controller="Home" asp-action="Login" method="POST">
        <div class="form-group">
            <label asp-for="LoginEmail"></label>
            <span asp-validation-for="LoginEmail" 
            class="text-danger font-weight-bold"
            ></span>
            <input asp-for="LoginEmail" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword"></label>
            <span asp-validation-for="LoginPassword" 
            class="text-danger font-weight-bold"
            ></span>
            <input asp-for="LoginPassword" class="form-control">
        </div>

        <input type="submit" value="Login" class="btn btn-primary">
    </form>
</body>
